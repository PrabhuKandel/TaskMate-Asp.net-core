<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task_Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task_Manager.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>

		<!-- SIDEBAR -->
		<section id="sidebar">
			<a href="#" class="brand">
				<span class="text">Task Manager</span>
			</a>
		 
			<ul class="side-menu top">
				<li class="">
					<a  asp-controller="Home" asp-action="Dashboard">
						<i class='bx bxs-dashboard'></i>
						<span class="text">Dashboard</span>
					</a>
				</li>
				<li>
					<a asp-controller="Task" asp-action="Index">
						<i class='bx bxs-shopping-bag-alt'></i>
						<span class="text">All Tasks</span>
					</a>
				</li>
			
			</ul>
			<ul class="side-menu">
				<li>
					<a href="">
						<i class='bx bxs-cog'></i>
						<span class="text">Settings</span>
					</a>
				</li>
				<li>
					    <a class="logout"  asp-area="Identity" asp-page="/Account/Logout" >
						<i class='bx bxs-log-out-circle'></i>
						<span class="text">Logout</span>
					</a>
				</li>
			</ul>
		</section>
		<!-- SIDEBAR -->
		<!-- CONTENT -->
		<section id="content">
			<!-- NAVBAR -->
			<nav>
				<!--
			<i class='bx bx-menu'></i>
				-->
		


				<form id="searchForm">
					<div class="form-input">
						<input type="search" id="taskSearch" placeholder="Search by Task Name...">
						<button type="button" id="searchButton"><i class='bx bx-search'></i></button>
					</div>
				
				</form>
			<a asp-action="Create" asp-controller="Task" class="btn btn-success text-white d-flex align-items-center gap-2  px-3 py-1 ">
				<i class="fa-solid fa-plus"></i>
				<span class="d-none d-md-inline">New Task</span>
			</a>



			<partial name="_LoginPartial" />
				<div class=" d-flex gap-4 justify-content-between ml-auto nav-left">
					<!--
				<input type="checkbox" id="switch-mode" hidden>
					<label for="switch-mode" class="switch-mode"></label>
					-->
				<a href="" class="notification">
					<i class='bx bxs-bell'></i>
					<span class="num">8</span>
				</a>
				<a href="" class="profile">
					<img src="img/people.png">
				</a>
				</div>
				
			</nav>
			<!-- NAVBAR -->
			<!-- MAIN -->
			<main>
			
				@RenderBody()
			</main>
			<!-- MAIN -->
		</section>
		<!-- CONTENT -->


		<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.20.0/js/mdb.min.js" integrity="sha512-XFd1m0eHgU1F05yOmuzEklFHtiacLVbtdBufAyZwFR0zfcq7vc6iJuxerGPyVFOXlPGgM8Uhem9gwzMI8SJ5uw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
